<%= render(:partial => "home/header") %>
<div class="loginwrapper">
  <span class="circle"></span>

  <div class="loginone">
    <header>
      <a href="dashboard1.html"><img src="../../../assets/images/logo.png" alt="" style="width: 140px"/></a>

      <p>Enter your credentials to login to your account</p>
    </header>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="username">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter your email" %>
            <i class="glyphicon glyphicon-user"></i>
          </div>
          <div class="password">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter your password" %>
            <i class="glyphicon glyphicon-lock"></i>
          </div>

          <% if devise_mapping.rememberable? -%>
              <div class="custom-radio-checkbox">
                <%= f.check_box :remember_me, class: "bluecheckradios" %>
                <label><%= f.label :remember_me %></label>
              </div>
              <script>
                $(document).ready(function () {
                  $('.bluecheckradios').iCheck({
                    checkboxClass: 'icheckbox_flat-blue',
                    radioClass: 'iradio_flat-blue',
                    increaseArea: '20%' // optional
                  });
                });
              </script>
          <% end -%>
          <%= f.submit "Log in", class: "btn btn-primary style2" %>
      <% end %>

    <footer>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot pull-left" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "register pull-right" %> 

      <div class="clear"></div>
    </footer>
  </div>
</div>
<%= render(:partial => "home/footer") %>