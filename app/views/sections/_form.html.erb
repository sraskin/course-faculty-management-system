<%= form_for(@section) do |f| %>
  <% if @section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% @section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :s_number %><br>
    <%= f.number_field :s_number %>
  </div>
  <div class="field">
    <%= f.label :course_id %><br>
    <%= f.select :course_id, @courses.collect {|p| [ p.course_title, p.id ] }, { include_blank: true } %>
  </div>
  <div class="field">
    <%= f.label :faculty_id %><br>
    <%= f.number_field :faculty_id %>
  </div>
  <div class="field">
    <%= f.label :time_id %><br>
    <%= f.select :time_id, @class_times.collect {|p| [ p.schedule_type, p.id ] }, { include_blank: true } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
